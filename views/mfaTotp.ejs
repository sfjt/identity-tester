<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="/public/favicon.ico">
    <style>
      dt {
        font-weight: bold;
      }
      nav {
        margin-bottom: 2em;
        border-width: 1px 0;
        border-style: dotted;
        border-color: gray;
      }
    </style>
    <title>TOTP MFA Enrollment</title>
  </head>
  <body>
    <h1>TOTP MFA Enrollment</h1>
    <nav>
      <ul>
        <li><a href="/mfa">MFA Settings</a></li>
      </ul>
    </nav>
    <% if(verificationResult) { %>
      <p><strong>Verification Result: Successful</strong></p>
    <% } else { %>
      <section>
        <form action="/mfa/totp/verify" method="POST">
          <p>secret: <input value="<%= secret %>" name="secret"></p>
          <p>barcode_uri: <input value="<%= barcodeURI %>" name="barcode_uri"></p>
          <p>otp: <input value="" name="otp"></p>
          <p><button>Submit</button></p>
        </form>
      </section>
    <% } %>
  </body>
</html>
