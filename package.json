{
  "name": "identity-tester",
  "version": "1.0.0",
  "description": "Auth0 all in one tester.",
  "scripts": {
    "start": "npm run build && NODE_ENV=prod node ./builds/server/server.bundle.js",
    "local": "yarn run build && NODE_ENV=dev nodemon ./src/server/server.ts",
    "local:https": "yarn run build && NODE_ENV=devhttps NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" nodemon ./src/server/server.ts",
    "build": "node ./buildClient.mjs && node ./buildServer.mjs",
    "format": "prettier --write 'src/**/*ts' 'public/*.js' './*.mjs'",
    "switchenv": "node ./switchenv.mjs"
  },
  "repository": "ssh://git@github.com/sfjt/identity-tester.git",
  "author": "sfjt <sho.foujita@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "^20"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "express-openid-connect": "^2.16.0",
    "jwks-rsa": "^3.0.1",
    "jose": "^4.15.2",
    "esbuild": "^0.19.3"
  },
  "devDependencies": {
    "@auth0/auth0-spa-js": "^2.1.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "auth0-js": "^9.22.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
